#!/bin/sh

touch report
chmod u=rw report

echo "============ Tests started ===========\n" | tee report

error_code=0

start_time=$(date +%s)

for f in `ls test*.py`
do
	echo "-----> $f" | tee -a report
	output=`python2 $f`

	if [ $? = 0 ]
	then
		echo | tee -a report
		echo Test [$f] passed | tee -a report	
	else
		error_code=1	
	fi

	echo $output | tee -a report

	echo | tee -a report
done

end_time=$(date +%s)
diff_time=$(( $end_time - $start_time))

echo "============ Tests ended =============" | tee -a report

echo "Took $diff_time seconds" | tee -a report

exit $error_code
